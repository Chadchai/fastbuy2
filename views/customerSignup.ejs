<% include partials/header.ejs %>


<head>
    <title>Authentication</title>

</head>

<body>
    <div class="container">
            <div class="row justify-content-center">
        <div class="col-sm-8 col-sm-offset-3">
<br>
            <h1><span class="fa fa-sign-in"></span>Customer Signup</h1>

            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
                <div class="alert alert-danger">
                    <%= message %>
                </div>
                <% } %>

                    <!-- LOGIN FORM -->
                    <form action="/addcustomer" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label>Company Name</label>
                            <input type="text" class="form-control" name="customer_name">
                        </div>
                        <div class="form-group">
                            <label>Company Information</label>
                            <textarea type="text" rows="4" class="form-control" name="customer_info"></textarea>

                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" name="password">
                        </div>

                        <button type="submit" class="btn btn-warning btn-lg">Signup</button>
                    </form>

                    <hr>

                    <p>Already have an account? <a href="/supplierlogin">Login</a></p>
                    <p>Or go <a href="/">home</a>.</p>

        </div>
    </div>
    </div>
</body>
